---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PostCard from "../../components/PostCard.astro";
const allPosts = await Astro.glob('./posts/*.md');
---
<BaseLayout title="POST">
    <div class="container">
        {allPosts.map(post => <PostCard title={post.frontmatter.title} url={post.url} image={post.frontmatter.image.url}></PostCard>)}
        <!-- {allPosts.map(post=>post.frontmatter.image.url)} -->
    </div>
</BaseLayout>
<style>
    .container {
        display: grid;
        width: 1200px;
        grid-template-columns: repeat(3,1fr);
        gap: 15px;
        margin: auto;
    }
</style>