---
import BaseLayout from "./BaseLayout.astro"
import Tag from "../components/Tag.astro"
const {frontmatter} = Astro.props
---
<BaseLayout title={frontmatter.title} desc={frontmatter.description}>
    <main>
        <div class="hero">
            <img src={frontmatter.image.url} alt="">
        </div>
        <h1>{frontmatter.title}</h1>
        <div>作者：{frontmatter.author}</div>
        <div>{frontmatter.tags}</div>
        <div>{frontmatter.pubDate.slice(0,10)}</div>
        <div class="content">
            <slot />
        </div>
        <a href="/blog">文章列表</a>

    </main>
</BaseLayout>
<style>
    main {
        width: 600px;
        margin-inline: auto;
    }
    .hero {
        width: 100%;
        aspect-ratio: 16/9;
        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    }
    .content {
        line-height: 1.7;
    }
</style>
